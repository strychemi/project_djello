<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% flash.each do |type, message| %>
        <div class="alert alert-success">
        <div>
        <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong id="flash-alert"><%= type.titleize %>! <%= message %></strong>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
